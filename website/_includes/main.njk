{#
The basic website template. The variables used as content are:

title: [Title for Window]
layout_type: [Type of Page ("text", "fullscreen")]
content: [Website Content]
#}
{% set layout_type = layout_type if layout_type in ["text", "fullscreen"] else "text" %}
<!DOCTYPE html>
<html lang="en">
  <head>
    {% block header %}
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="icon" href="/favicon.svg" type="image/svg+xml">
      {% include "_page_header.njk" %}
      {% include "_fonts.njk" %}
      <style>
        {% inline "essentials.pcss" %} 
        {% inline "variables.pcss" %}
      </style>
      <link rel="stylesheet" href="{{ "/katex/katex.min.css" | link }}">
    {% endblock %}
  </head>
  <body>
    <div class="root root-{{ layout_type }}">
      {% block root_div %}
        {% include "_header.njk" %}
        {% include "_page_content.njk" %}  
      {% endblock %}
    </div>
  </body>
</html>