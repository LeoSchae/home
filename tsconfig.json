{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    // Language & Environment
    "target": "ES6",
    "lib": ["es2017", "DOM"],
    "jsx": "react",

    // modules
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["./library/src/*"]
    },
    "types": [],
    "allowJs": true,

    // Emit
    "noEmit": true,

    // Interop
    "esModuleInterop": true,

    // Type Checking
    "strict": true
  },
  "exclude": ["**/*.test.ts"],
  "paths": ["./library/src/types.d.ts"]
}
